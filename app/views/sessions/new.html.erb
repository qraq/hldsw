<h1>Logowanie</h1>

<%= form_for(:session, :url => sessions_path) do |f|%>  

<div class="field">
  <%= f.label :email  %><br/>
  <%= f.text_field :email %>
<div/>

<div class="field">
  <%= f.label "Hasło" %><br/>
  <%= f.password_field :password %>
<div/>

<div class="actions">
  <%= f.submit "Zaloguj" %>
<div/>

<% end %>
<br/>
<p> Nie masz konta? <%= link_to "  Zalóż sobie teraz!", signup_path %><p/>